<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_container">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mybookList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

    <FrameLayout android:id="@+id/header"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/max_height_header">

        <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="@drawable/i2"
            android:orientation="vertical"
            android:weightSum="100"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:id="@+id/headerText"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="75"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="25"
                android:background="#84000000"
                android:weightSum="100"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="15">
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:src="@drawable/view3"
                    app:border_color="#FF000000"
                    android:layout_weight="17"
                    android:padding="4dp"/>
                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="53"
                    android:weightSum="100">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="20">

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="30"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:weightSum="100">
                        <TextView
                            android:textSize="17sp"
                            android:layout_weight="66"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:text="No_name0205"
                            android:textColor="#ffffff"
                            android:gravity="bottom"/>

                        <ImageButton
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="30"
                            android:src="@drawable/reprofile_btn"
                            android:scaleType="centerInside"
                            android:background="#00000000"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:layout_weight="10"></LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_weight="34"
                        android:layout_width="match_parent"
                        android:layout_height="0dip"
                        android:weightSum="99">
                        <TextView
                            android:textSize="10sp"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:text="이야기 : 2"/>

                        <TextView
                            android:textSize="10sp"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:text="팔로잉 : 113"/>

                        <TextView
                            android:textSize="10sp"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="33"
                            android:text="팔로워 : 25"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
